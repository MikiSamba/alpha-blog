<h1 class= "text-center mt-4 fw-bold">Article listing page</h1>

<div class="container">
    
    <div class= "links text-center">
        <%= link_to "Create New Article", new_article_path, class: "btn btn-primary mt-5 mb-5" %>
    </div>
    
    <% @articles.each do |article|%>

        <div class="row justify-content-md-center">
            <div class="col-8 mt-4 ">
                <div class="card text-center">
                <div class="card-header">
                    Article
                </div>
                <div class="card-body">
                    <h5 class="card-title"><%=article.title%></h5>
                    <p class="card-text"><%= simple_format(article.description) %></p>
                    
                    <td><%= link_to "Show", article_path(article.id), class: "btn btn-success" %></td>
                    <td><%= link_to "Edit", edit_article_path(article.id), class:"btn btn-info" %></td>
                    <td><%= link_to "Delete", article_path(article.id), method: :delete, onclick: "return confirm('Sei sicuro di eliminare?');" , class:"btn btn-danger" %></td>
                </div>
                <div class="card-footer text-muted">
                    <small>Created <%= article.created_at %> ago, edited <%=article.updated_at %> ago </small>
                </div>
                </div>
            </div>
        </div>
    <% end %>

</div>


           
            
